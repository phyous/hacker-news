<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <!--Pull-to-refresh customization-->
    <!--More customization options here: https://github.com/chrisbanes/ActionBar-PullToRefresh/wiki/Customisation-->
    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <!-- Color to tint the progress bar -->
        <item name="ptrProgressBarColor">@color/orange_hn</item>

        <!-- Style of the Progress Bar. Values are either: inside or outside -->
        <item name="ptrSmoothProgressBarStyle">@style/Widget.Custom.SmoothProgressBar.HNProgressBar</item>
    </style>

    <style name="Widget.Custom.SmoothProgressBar.HNProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_stroke_width">4dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">2.3</item>
        <item name="spb_reversed">true</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_gradients">false</item>
        <item name="spb_interpolator">spb_interpolator_decelerate</item>
        <item name="spb_colors">@array/hn_colors</item>
    </style>

</resources>

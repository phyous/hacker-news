<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.todddavies.components.progressbar.ProgressWheel
        android:id="@+id/spinner"
        android:layout_width="@dimen/pw_width"
        android:layout_height="@dimen/pw_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pw_margin_top"
        ProgressWheel:rimColor="@color/grey_hn"
        ProgressWheel:contourColor="@color/grey_hn"
        ProgressWheel:barLength="@dimen/pw_bar_length"
        ProgressWheel:barColor="@color/orange_hn"
        ProgressWheel:spinSpeed="@dimen/pw_spin_speed"
        ProgressWheel:barWidth="@dimen/pw_bar_width"
        ProgressWheel:rimWidth="@dimen/pw_rim_width" />

    <uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout
        android:id="@+id/ptr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/story_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>

</LinearLayout>